extends ../layout

block content
  div.row
    div.col-sm-1
    div.col-sm-10
      div.page-header
        h1 #{blog.title}
        br
        h4 By #{blog.blogowner.username}
      div.col-sm-10
        p #{blog.content}
        br
      div.col-sm-10
        h2 Edit Comment
        form(method="post", action="/comment/update/#{comment.id}")
          div(class="form-group")
            label(class="col-sm-2 control-label") Comment
            div(class="col-sm-6")
              input(type="textarea", class="form-control", value="#{comment.content}", name="comment")
          div(class="form-group")
            div(class="col-sm-offset-2 col-sm-10")
              button(type="submit",class="btn btn-default") Submit
