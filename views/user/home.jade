extends ../layout

block content
  div.row
    div.col-sm-1
    div.col-sm-10
      div.page-header
        h1 Hello #{user.username}!
  div.row
    div.col-sm-1
    div.col-sm-10
      a(href="/dashboard", class="btn btn-default btn-lg active", role="button") Dashboard
  br
  div.row
    div.col-sm-1
    div.col-sm-10
      table(class = "table table-striped")
        tr
          th.col-sm-2 #Id
          th.col-sm-2 #BlogName
          th.col-sm-2 #ReadMe
        each blog in blogs
          tr
            td.col-sm-2 #{blog.id}
            td.col-sm-2 #{blog.title}
            td.col-sm-2
              a(href="/blog/#{blog.id}", class="btn btn-default active", role="button") Read Me

