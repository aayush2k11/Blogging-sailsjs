extends ../layout

block content
  div.page-header
    h1 Hello #{user.username}!
  div.col-sm-11
    table(class = "table table-striped")
      tr
        th.col-sm-1 #Id
        th.col-sm-1 #BlogName
        th.col-sm-8 #Content
        th.col-sm-1 #Owner
      each blog in blogs
        tr
          td.col-sm-1 #{blog.id}
          td.col-sm-1 #{blog.title}
          td.col-sm-8 #{blog.content}
          td.col-sm-1 #{blog.blogowner}

  //- ul
  //-   each blog in blogs
  //-     li Blog Name: #{blog.title}

  a(href="/users/createBlog", class="btn btn-primary btn-lg active", role="button") Create Blog
  a(href="/home", class="btn btn-default btn-lg active", role="button") Home