extends ../layout

block content
  h1 Hello #{user.username}!
  form(action='/users/createBlog', method="post", class="form-horizontal")
    div(class="form-group")
      label(class="col-sm-2 control-label") Title
      div(class="col-sm-6")
        input(type="text", class="form-control", placeholder="Title", name="title")
    div(class="form-group")
      label(class="col-sm-2 control-label") Content
      div(class="col-sm-6")
        input(type="textarea", class="form-control", placeholder="Add your content", name="content")
    div(class="form-group")
      div(class="col-sm-offset-2 col-sm-10")
        button(type="submit",class="btn btn-default") Create

